generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(cuid())
  username     String @unique
  passwordHash String
  displayName  String
  description  String @default("")
  followers    User[] @relation(name: "Following")
  following    User[] @relation(name: "Following")
}
